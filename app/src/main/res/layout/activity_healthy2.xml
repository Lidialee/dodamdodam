<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/gradient" />

            <TextView
                android:id="@+id/healthyTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ff6e57"
                android:padding="8dp"
                android:text="건강 기록"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20pt" />

            <Button
                android:id="@+id/healthyList"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/list" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/kidBody"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:src="@drawable/kid" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal">

                            <Button
                                android:id="@+id/kidHead"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/allround_dash_button" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <Button
                                android:id="@+id/kidHand"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_gravity="left|center_vertical"
                                android:layout_weight="1"
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/allround_dash_button" />

                            <Button
                                android:id="@+id/kidStomach"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/allround_dash_button" />

                            <Button
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:layout_marginRight="10dp"
                                android:background="#00ffffff" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|bottom"
                            android:paddingLeft="70dp">

                            <Button
                                android:id="@+id/kidLeg"
                                android:layout_width="90dp"
                                android:layout_height="100dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/allround_dash_button" />
                        </TableRow>

                    </TableLayout>

                </FrameLayout>
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>


</RelativeLayout>