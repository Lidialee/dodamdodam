<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_vaccine">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/vaccineEdit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/editing" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/gradient"/>

            <TextView
                android:id="@+id/vaccineName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ff6e57"
                android:padding="8dp"
                android:text="예방접종"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20pt" />

        </FrameLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/vaccine1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="디프테리아\n파상풍\n백일해" />

                <ImageView
                    android:id="@+id/vaccine1_boolean1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/vaccine_true" />

                <ImageView
                    android:id="@+id/vaccine1_boolean2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/vaccine_true" />

                <ImageView
                    android:id="@+id/vaccine1_boolean3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/vaccine_true" />

                <ImageView
                    android:id="@+id/vaccine1_boolean4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/vaccine_true" />

                <ImageView
                    android:id="@+id/pis1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/vaccine_false" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/vaccine2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="폴리오" />

                <ImageView
                    android:id="@+id/vaccine2_boolean1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/vaccine_true" />

                <ImageView
                    android:id="@+id/vaccine2_boolean2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/vaccine_true" />

                <ImageView
                    android:id="@+id/vaccine2_boolean3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/vaccine_true" />

                <ImageView
                    android:id="@+id/pis2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/vaccine_false" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/vaccine3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="홍역\n이하선염" />

                <ImageView
                    android:id="@+id/vaccine3_boolean1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/vaccine_true" />

                <ImageView
                    android:id="@+id/pis3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/vaccine_false" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/vaccine4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="일본뇌염" />

                <ImageView
                    android:id="@+id/vaccine4_boolean1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/vaccine_true" />

                <ImageView
                    android:id="@+id/vaccine4_boolean2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/vaccine_true" />

                <ImageView
                    android:id="@+id/pis4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/vaccine_false" />

                <ImageView
                    android:id="@+id/pis5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/vaccine_false" />

                <ImageView
                    android:id="@+id/pis6"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/vaccine_false" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/vaccine5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="A형간염" />

                <ImageView
                    android:id="@+id/pis7"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/vaccine_false" />

                <ImageView
                    android:id="@+id/pis8"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/vaccine_false" />

            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/VaccineEnd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/allround_button"
            android:text="수정 완료"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="13pt" />

    </LinearLayout>


</RelativeLayout>